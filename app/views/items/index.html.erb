<%= link_to "ログアウト", logout_path %>

<h1>あなたの ToDo</h1>

<table>
  <tr>
    <th>Done</th>
    <th>Title</th>
    <th>Tag</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.done %></td>
    <td><%=h item.title %></td>
    <td>
      <% item.tag_list.each do |tag| %>
        <%= link_to_tag(tag) %>
      <% end %>
    </td>
    <td><%= link_to "編集", edit_item_path(item) %></td>
    <td><%= link_to "削除", item, :confirm => "削除してもいいですか？", :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>
